<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_services_type_form" model="ir.ui.view">
            <field name="name">services.type.form</field>
            <field name="model">services.type</field>
            <field name="arch" type="xml">
                <form string="Services Type">
                	<sheet>
                		<group string="Services Type Information">
                			<group>
                				<field name="name"/>
                			</group>
                		</group>
                	</sheet>
                </form>
            </field>
        </record>

        <record id="view_services_type_tree" model="ir.ui.view">
            <field name="name">services.type.tree</field>
            <field name="model">services.type</field>
            <field name="arch" type="xml">
                <tree string="Services Type">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="services_type_action" model="ir.actions.act_window">
            <field name="name">Services Type</field>
            <field name="res_model">services.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
	</data>
</odoo>